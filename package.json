{
  "name": "promptnest-extension",
  "version": "1.0.0",
  "description": "PROMPTNEST is a browser extension that helps you create and manage your prompts.",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/**/*.ts --bundle --outdir=dist",
    "build:ts": "tsc",
    "build:copy": "node build-script.js",
    "build:extension": "npm run build && npm run build:copy",
    "clean": "rimraf dist build",
    "dev": "tsc --watch"
  },
  "keywords": [
    "browser-extension",
    "typescript",
    "promptnest"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "esbuild": "^0.25.10"
  }
}
